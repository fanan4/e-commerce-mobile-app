<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#cccaca"
    android:layout_marginTop="10dp"
    app:cardElevation="0dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
         <ImageView
             android:layout_width="120dp"
             android:layout_height="150dp"
             android:id="@+id/cartItemImg"
             android:layout_marginLeft="-5dp"
             />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:id="@+id/cartItemDet"
            android:orientation="vertical">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="30dp"
                   android:textStyle="bold"
                   android:id="@+id/cartItemTitle"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="20dp"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/cartItemPrice"
                   android:layout_marginTop="10dp"
                   android:textSize="25dp"
                   android:textStyle="bold"
                   android:textColor="#6d6e6e"
                  />
                 <RelativeLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content">
                     <RelativeLayout
                         android:layout_width="35dp"
                         android:layout_height="35dp"
                         android:background="@drawable/circle_border_cart"
                         android:id="@+id/minus_icon"
                         android:layout_centerVertical="true"
                         >
                         <ImageView
                             android:layout_width="30dp"
                             android:layout_height="30dp"
                             android:src="@drawable/ic_minuscart"
                             android:layout_centerInParent="true"
                             />
                     </RelativeLayout>
                     <RelativeLayout
                         android:layout_width="40dp"
                         android:layout_height="40dp"
                         android:layout_toRightOf="@+id/minus_icon"
                         android:id="@+id/qtyValue"
                         android:layout_centerVertical="true"
                         >
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="1"
                             android:id="@+id/quantityVal"
                             android:textStyle="bold"
                             android:textSize="30dp"
                             android:layout_centerInParent="true"
                             />
                     </RelativeLayout>
                     <RelativeLayout
                         android:layout_width="35dp"
                         android:layout_height="35dp"
                         android:layout_toRightOf="@+id/qtyValue"
                         android:id="@+id/addOne"
                         android:layout_centerVertical="true"
                         android:background="@drawable/circle_border_cart"
                         >
                         <ImageView
                             android:layout_width="30dp"
                             android:layout_height="30dp"
                             android:src="@drawable/ic_addcart"
                             android:layout_centerInParent="true"
                             />
                     </RelativeLayout>
                 </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>