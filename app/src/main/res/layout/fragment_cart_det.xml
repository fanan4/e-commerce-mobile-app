<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="25dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cartContainer"
        android:background="#cccaca"
        android:elevation="30dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cartHeader"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_back"
                android:id="@+id/back"
                android:layout_marginLeft="-10dp"
                android:layout_marginTop="-8dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cart List"
                android:layout_marginLeft="30dp"
                android:textSize="30dp"
                android:textStyle="bold"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_search"
                android:layout_marginLeft="120dp"
                android:id="@+id/cartSearchBtn"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>
           <ScrollView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/cartHeader"
               android:layout_marginTop="10dp"

               >
               <androidx.recyclerview.widget.RecyclerView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/cartRecylerView"
                   />
           </ScrollView>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_alignParentBottom="true"
                   android:orientation="horizontal"
                   android:layout_marginTop="10dp"
                   android:background="#cccaca"
                   android:paddingTop="10dp"
                   android:paddingBottom="15dp"
                   >
                     <RelativeLayout
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content">
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:id="@+id/totalPrice"
                             android:text="Total price"
                             android:textSize="20dp"
                             android:textColor="#909091"
                             android:layout_marginLeft="10dp"
                             />
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:id="@+id/totalPriceVal"
                             android:layout_below="@id/totalPrice"
                             android:textStyle="bold"
                             android:textSize="30dp"
                             android:text="$10"
                             android:layout_marginLeft="10dp"
                             />
                     </RelativeLayout>
                   <LinearLayout
                       android:layout_width="200dp"
                       android:layout_height="60dp"
                       android:background="@drawable/buy_now_border"
                       android:layout_marginLeft="50dp"
                       android:id="@+id/buyNowCont"
                       >
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Buy Now"
                             android:id="@+id/buyNow"
                             android:textSize="25dp"
                             android:textStyle="bold"
                             android:textColor="@color/white"
                             android:layout_marginTop="10dp"
                             android:layout_marginLeft="30dp"
                             />
                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="35dp"
                           android:src="@drawable/ic_forward"
                           android:background="#56fceb"
                           android:layout_marginTop="15dp"

                           />
                   </LinearLayout>
               </LinearLayout>


    </RelativeLayout>

</RelativeLayout>