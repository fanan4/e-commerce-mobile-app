<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:bottom="-10dp"
        android:left="1dp"
        android:right="-10dp"
        android:top="-10dp">
        <shape android:shape="rectangle" >
            <stroke
                android:width="1dp"
                android:color="#b3b1b1" />

            <solid
                android:width="1dp"
                android:color="#adadad" >
            </solid>

            <padding android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp" />
            <corners
                android:radius="10dp"
                />
        </shape>
    </item>

</layer-list>